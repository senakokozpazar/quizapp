<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - QuizApp</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            background-color: #f2f2f2; /* Genel açık arka plan */
            display: flex;
            flex-direction: column;
        }

        .navbar {
            background-color: #660099; /* Mor arka plan */
        }

        .navbar-brand, .nav-link, .footer-text {
            color: #fff !important;
        }

        .footer {
            background-color: #120A8F;
            padding: 1rem;
            text-align: center;
            position: relative;
            bottom: 0;
            width: 100%;
            color: white;
        }

        main {
            flex-grow: 1;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg container-fluid px-0">
            <div class="w-100 d-flex justify-content-between align-items-center px-4">
                <a class="navbar-brand" href="/">QuizApp</a>

                @if (Context.Session.GetInt32("UserId") != null)
                {
                    <div class="d-flex align-items-center text-white">
                        <span class="me-3">Hoşgeldin, @Context.Session.GetString("UserName")</span>
                        <form method="post" asp-controller="User" asp-action="Logout" style="margin:0;">
                            <button type="submit" class="btn btn-outline-light btn-sm">Çıkış Yap</button>
                        </form>
                    </div>
                }
                else
                {
                    <a href="/User/Login" class="btn btn-outline-light btn-sm">Giriş Yap</a>
                }
            </div>
        </nav>
    </header>


    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="footer mt-auto">
        <div class="footer-text">
            © @DateTime.Now.Year QuizApp | Geliştirici: Sena Pazar
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
