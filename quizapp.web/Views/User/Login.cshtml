@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #0a0a2a, #1a0a3a);
            color: #e0e0e0;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-container {
            max-width: 500px;
            margin: 80px auto;
            background-color: rgba(255, 255, 255, 0.05);
            border-radius: 12px;
            padding: 40px;
            box-shadow: 0 0 20px rgba(0, 255, 255, 0.2);
        }

        .form-control {
            background-color: transparent;
            border: 1px solid #00ffff;
            color: white;
        }

            .form-control:focus {
                background-color: transparent;
                color: white;
                border-color: #ff00ff;
                box-shadow: 0 0 10px #ff00ff;
            }

        .btn-login {
            background: linear-gradient(45deg, #00ffff, #ff00ff);
            border: none;
            color: white;
            font-weight: bold;
            width: 100%;
            box-shadow: 0 0 10px rgba(0, 255, 255, 0.6);
        }

            .btn-login:hover {
                background: linear-gradient(45deg, #ff00ff, #00ffff);
                box-shadow: 0 0 15px rgba(0, 255, 255, 0.8);
            }

        .error-message {
            color: #ff8080;
            margin-top: 10px;
        }

        a.register-link {
            color: #00ffff;
            text-decoration: none;
        }

            a.register-link:hover {
                text-decoration: underline;
                color: #ff00ff;
            }
    </style>
}

<div class="login-container">
    <h2 class="text-center mb-4"><i class="bi bi-person-circle text-info"></i> Giriş Yap</h2>

    @if (ViewBag.Error != null)
    {
        <div class="error-message text-center">@ViewBag.Error</div>
    }

    <form method="post">
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" class="form-control" required />
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Şifre</label>
            <input type="password" name="password" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-login">Giriş Yap</button>
    </form>

    <div class="text-center mt-3">
        Hesabınız yok mu? <a href="/User/Register" class="register-link">Kayıt Ol</a>
    </div>
</div>
