@{
    ViewData["Title"] = "Quiz Tamamlandı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #0a0a2a 0%, #1a0a3a 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #e0e0e0;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
        }

        .completion-box {
            background-color: rgba(255, 255, 255, 0.05);
            border: 2px solid transparent;
            border-radius: 15px;
            padding: 40px;
            text-align: center;
            max-width: 500px;
            box-shadow: 0 0 10px rgba(100, 255, 255, 0.6),
                        0 0 20px rgba(100, 255, 255, 0.4),
                        0 0 30px rgba(100, 255, 255, 0.2);
            animation: glow 1.5s infinite alternate;
        }

        .completion-box h2 {
            font-size: 2rem;
            color: #ffffff;
            margin-bottom: 20px;
            text-shadow: 0 0 5px rgba(255,255,255,0.7);
        }

        .completion-box p {
            font-size: 1.2rem;
            color: #e0e0e0;
        }

        .completion-box a {
            display: inline-block;
            margin-top: 25px;
            padding: 12px 24px;
            background: linear-gradient(45deg, #00ffff, #ff00ff);
            color: #fff;
            font-weight: bold;
            text-decoration: none;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 255, 255, 0.7),
                        0 0 25px rgba(0, 255, 255, 0.5);
            transition: all 0.3s ease;
        }

        .completion-box a:hover {
            background: linear-gradient(45deg, #ff00ff, #00ffff);
            box-shadow: 0 0 20px rgba(0, 255, 255, 0.9),
                        0 0 30px rgba(0, 255, 255, 0.7);
            transform: translateY(-2px);
        }

        @@keyframes glow {
            0% {
                box-shadow: 0 0 10px rgba(100, 255, 255, 0.6),
                            0 0 20px rgba(100, 255, 255, 0.4),
                            0 0 30px rgba(100, 255, 255, 0.2);
            }
            50% {
                box-shadow: 0 0 15px rgba(100, 255, 255, 0.8),
                            0 0 25px rgba(100, 255, 255, 0.6),
                            0 0 35px rgba(100, 255, 255, 0.4);
            }
            100% {
                box-shadow: 0 0 10px rgba(100, 255, 255, 0.6),
                            0 0 20px rgba(100, 255, 255, 0.4),
                            0 0 30px rgba(100, 255, 255, 0.2);
            }
        }
    </style>
}

<div class="completion-box">
    <h2>Quiz Tamamlandı!</h2>
    <p>Toplam Doğru Cevap Sayısı: <strong>@ViewBag.FinalScore</strong></p>
    <a href="@Url.Action("Index", "Quiz")">
        Ana Sayfaya Dön
    </a>
</div>
