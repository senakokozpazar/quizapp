@model IEnumerable<quizapp.data.Models.Quiz>
@{
    ViewData["Title"] = "Ana Sayfa";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - QuizApp</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- İçeride yazılmış özel CSS -->
    <style>
        body {
            background: linear-gradient(to right, #f8f9fa, #e0e7ff);
            font-family: 'Segoe UI', sans-serif;
        }

        .quiz-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-radius: 10px;
        }

            .quiz-card:hover {
                transform: scale(1.03);
                box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            }

        .start-btn {
            background-color: #120A8F;
            color: white;
            font-weight: 600;
            border-radius: 8px;
        }

            .start-btn:hover {
                background-color: #0e0870;
            }

        footer {
            margin-top: 60px;
            padding: 20px 0;
            background-color: #f8f9fa;
            text-align: center;
            color: #6c757d;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>

    <div class="container py-5">
        <h1 class="text-center text-dark my-4 display-4 fw-bold">
            <i class="bi bi-lightning-fill text-warning"></i> QuizApp – Bilgini Test Et!
        </h1>

        <div class="row">
            @foreach (var quiz in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card quiz-card shadow-sm border-0 h-100">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title text-primary mb-2">
                                    <i class="bi bi-puzzle-fill text-secondary"></i> @quiz.QuizTitle
                                </h5>
                                <p class="card-text text-muted">@quiz.Description</p>
                            </div>
                            <div class="mt-3">
                                <button class="btn start-btn w-100" onclick="startQuiz(@quiz.QuizId)">
                                    <i class="bi bi-play-circle-fill"></i> Quize Başla
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

  

    <!-- Script -->
    <script>function startQuiz(quizId) {
            if (confirm("Quize başlamak istiyor musunuz?")) {
                window.location.href = `/Quiz/Start?quizId=${quizId}`;
            }
        }</script>
</body>
</html>
